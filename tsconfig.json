{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "jsx": "react-native"
  },
  "include": [
    "backend/**/*",
    "src/**/*",
    "app/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/types/declarations.d.ts" // âœ… added declaration file
    ,
    "utils/GlobalUtils/FormatDate.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}